.page-header
  %h1
    = @user.display_name
    = link_to t('.edit'), edit_user_path, class: 'btn btn-primary pull-right'
.row
  .span6
    %table.table
      %tbody
        %tr
          %td= t('.nickname')
          %td= @user.nickname
        %tr
          %td= t('.email')
          %td= @user.email